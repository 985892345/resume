@import './styles/util.styl'

// 主色，包括header颜色，strong标签文字颜色等
$mainColor = #4682b4

// 背景颜色，指的是PC端大背景的颜色
$bgColor = #F2F2F2

// 主体文字内容颜色
$mainFontColor = #444
// 主体文字标题颜色
$mainHeaderColor = #222

// 第一个字体"Museo Sans"是作者自定义的英文字体
// 如不喜欢可注释掉，或者删掉styles/font里对应的文件
$fontFamily = "Museo Sans", "Arial", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "Oxygen", "Helvetica Neue", "sans-serif"

// 主要文字大小
// 适用于主题内容中的文字
$articleSize = 15.2px
